{
	"name": "ai-convo",
	"version": "0.0.2",
	"description": "High level wrappers for AI conversation tools: text to speech, speech to text, LLMs",
	"keywords": [
		"ai",
		"deepgram",
		"llm",
		"openai",
		"speech-to-text",
		"speech",
		"stt",
		"text-to-speech",
		"tts",
		"webllm"
	],
	"repository": {
		"type": "git",
		"url": "git+https://github.com/harlantwood/ai-convo.git"
	},
	"license": "Apache-2.0",
	"author": "Harlan T Wood",
	"type": "module",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js"
		}
	},
	"svelte": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"files": [
		"dist",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*"
	],
	"scripts": {
		"build": "vite build && npm run package",
		"bump": "npm-bump patch --prefix '[skip ci]'",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"dev": "vite dev",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"lint:fix": "yarn format && eslint --fix .",
		"package": "svelte-kit sync && svelte-package && publint",
		"package:watch": "svelte-kit sync && svelte-package --watch",
		"prepublishOnly": "npm run package",
		"preview": "vite preview",
		"ps": "yarn lint:fix && git push origin HEAD",
		"sort": "yarn sort-package-json",
		"test": "vitest"
	},
	"dependencies": {
		"@deepgram/sdk": "^3.2.0",
		"buffer": "^6.0.3",
		"openai": "^4.24.1"
	},
	"devDependencies": {
		"@sveltejs/adapter-auto": "^3.0.0",
		"@sveltejs/kit": "^2.0.0",
		"@sveltejs/package": "^2.0.0",
		"@sveltejs/vite-plugin-svelte": "^3.0.0",
		"@types/eslint": "^8.56.7",
		"eslint": "^9.0.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-svelte": "^2.36.0",
		"globals": "^15.0.0",
		"npm-bump": "^0.0.33",
		"prettier": "^3.1.1",
		"prettier-plugin-svelte": "^3.1.2",
		"publint": "^0.1.9",
		"sort-package-json": "^2.6.0",
		"svelte": "^4.2.7",
		"svelte-check": "^3.6.0",
		"tslib": "^2.4.1",
		"typescript": "^5.0.0",
		"typescript-eslint": "^7.5.0",
		"vite": "^5.0.11",
		"vitest": "^1.2.0"
	},
	"peerDependencies": {
		"svelte": "^4.0.0"
	}
}
